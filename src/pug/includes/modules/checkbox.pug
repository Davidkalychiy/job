.main_checkbox expandable checkbox list
    .main_checkbox__arrow
        img(src="assets/img/expand_more.svg", alt="arrow" class="arrow")
        img(src="assets/img/expand_more.svg", alt="arrow_rotate" class='arrow_rotate')
.main_wrapper
    mixin checkbox(value)
        .wrapper_checkbox
            .wrapper_checkbox__checkbox
                .cont
                    img(src="assets/img/Vector.svg", alt="vector" class="vector")
                .text= value
    +checkbox('Завтрак')
    +checkbox('Письменный стол')
    +checkbox('Стул для кормления')
    +checkbox('Кроватка')
    +checkbox('Телевизор')
    +checkbox('Шампунь')