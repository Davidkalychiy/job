mixin dropdown_2(value)
    .dropdown
        .dropdown__title= value
            .dropdown__wrapper
                .dropdown__arrow
                    img(src="assets/img/expand_more.svg", alt="arrows")
                .dropdown__text Сколько гостей?
            .dropdown__select 
                +select('Взрослые')
                +select('Дети')
                +select('Младенцы')
                .button
                    .button__clear Очистить
                    .button__apply Применить