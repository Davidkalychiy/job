mixin exp_checkbox(value, type)
    if type == 'true'
        .exp_checkbox-black= value
            .exp_checkbox__arrow
                img(src="assets/img/expand_more.svg", alt="arrow" class="arrow")
                img(src="assets/img/expand_more.svg", alt="arrow_rotate" class='arrow_rotate')
    else 
        .exp_checkbox= value
            .exp_checkbox__arrow
                img(src="assets/img/expand_more.svg", alt="arrow" class="arrow")
                img(src="assets/img/expand_more.svg", alt="arrow_rotate" class='arrow_rotate')
    .select_checkbox
        if type == 'true'
            +checkbox('Завтрак')
            +checkbox('Письменный стол')
            +checkbox('Стул кормления')
            +checkbox('Кроватка')
            +checkbox('Телевизор')
            +checkbox('Шампунь')


    